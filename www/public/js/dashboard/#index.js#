$(document).on('click', '.data .middle', function () {
    var form = '
<form class="form">
<div class="form-group">
    <label for="amount">Type de montant :</label>
    <select class="form-control">

</select>
</div>

<div class="form-group">
    <label for="amount">Montant de Grande Voirie :</label>
    <input type="number" class="form-control" name="amount" value="test">
</div>
</form>
';

    bootbox.confirm(form, function(result) {
        if(result)
            $('#infos').submit();
    });
});

$('.collapse').on('show.bs.collapse', function () {
    $(this).parent().find('.show-more').animate({opacity: 0}, 400);

});

$('.collapse').on('hide.bs.collapse', function () {
    $(this).parent().find('.show-more').animate({opacity: 1});
});
